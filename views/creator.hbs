<h1>This is where you add albums BITCH</h1>
<form action="/albums" method="post">
  <fieldset>
    <legend>Create Album</legend>
    <label>Artist Title</label>
    <input type="text" name="artist">
    <br><br>
    <label>Album Title</label>
    <input type="text" name="name">
    <br><br>
    <label>Genre</label>
    <select name="genre">
      {{#genres}}
      <option value="{{value}}">{{title}}</option>
      {{/genres}}
    </select>
    <br><br>

    <input type="checkbox" name="explicit" value="true">Contains Explicit Lyrics
    <br><br>

    <!-- <input type="text" name="Artist"> -->
    <input type="submit" value="Create Album">
    <br>
    <a href="/albums">Cancel</a>
  </fieldset>
</form>
